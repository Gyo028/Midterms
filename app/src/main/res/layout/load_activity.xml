<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purps_bg"
    android:padding="16dp">

    <!-- FORM CARD CONTAINER -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/loadFormCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/card_bg"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Load Amount"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Input Field -->
        <EditText
            android:id="@+id/amountInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="0"
            android:inputType="number"
            android:textSize="28sp"
            android:textAlignment="center"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#888888"
            app:layout_constraintTop_toBottomOf="@id/titleText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"/>

        <!-- Quick Amount Grid -->
        <GridLayout
            android:id="@+id/amountGrid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:useDefaultMargins="true"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/amountInput"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/btn50"
                style="@style/DarkButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="+50"/>

            <Button
                android:id="@+id/btn100"
                style="@style/DarkButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="+100"/>

            <Button
                android:id="@+id/btn150"
                style="@style/DarkButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="+150"/>

            <Button
                android:id="@+id/btn200"
                style="@style/DarkButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="+200"/>
        </GridLayout>

        <!-- Selected Amount Checker -->
        <TextView
            android:id="@+id/selectedAmountChecker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You are adding: â‚±0.00"
            android:textSize="16sp"
            android:textColor="#CCCCCC"
            app:layout_constraintTop_toBottomOf="@id/amountGrid"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" />

        <!-- Confirm Button -->
        <Button
            android:id="@+id/confirmButton"
            style="@style/DarkButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/selectedAmountChecker"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
